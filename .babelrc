{
	"ignore": [
    	"node_modules/**"
  	],
	"env": {
		"test": {
			"presets": [
				"react",
				"flow",
				"es2015",
				"stage-0"
			]
		},
		"development": {
			"presets": [
				"react",
				"flow",
				["es2015", { "modules": false }],
				"stage-0"
			],
			"plugins": [
				"external-helpers"
			]
		},
		"production": {
			"presets": [
				"react",
				"flow",
				["es2015", { "modules": false }],
				"stage-0"
			],
			"plugins": [
				"external-helpers",
				"transform-react-jsx"
			]
		}
	}
}
